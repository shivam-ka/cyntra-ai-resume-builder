generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Resume {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  userId       String
  title        String?
  descrition   String?
  photoUrl     String?
  colorHex     String  @default("#000000")
  borderRadius Int     @default(0)
  summary      String?
  firstName    String?
  lastName     String?
  jobTitle     String?
  city         String?
  country      String?
  phone        String?
  email        String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("resumes")
}
