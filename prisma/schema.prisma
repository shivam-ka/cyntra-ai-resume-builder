generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Resume {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  userId       String
  title        String?
  description  String?
  photoUrl     String?
  colorHex     String  @default("#000000")
  borderRadius Int     @default(0)
  summary      String?
  firstName    String?
  lastName     String?
  jobTitle     String?
  city         String?
  country      String?
  phone        String?
  email        String?

  workExperience WorkExperience[]
  education      Education[]
  skills         String[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("resumes")
}

model WorkExperience {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  position    String?
  company     String?
  startDate   DateTime?
  endDate     DateTime?
  description String?

  resumeId String @db.ObjectId
  resume   Resume @relation(fields: [resumeId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("workExperiences")
}

model Education {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  degree    String?
  school    String?
  startDate DateTime?
  endDate   DateTime?

  resumeId String @db.ObjectId
  resume   Resume @relation(fields: [resumeId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
